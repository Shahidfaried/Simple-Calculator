<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />

<!--    For Action Button CLEAR and /-->
    <style name="ActionButton">

        <item name= "android:layout_width" >0dp</item>
        <item name = "android:layout_margin">@dimen/_1sdp</item>
        <item name= "android:layout_height" >match_parent</item>
        <item name= "android:layout_weight" >1</item>
        <item name = "android:background"> @color/actionButton </item>
        <item name="android:textColor">@color/white</item>
        <item name= "android:textSize" >@dimen/_24ssp</item>
        <item name= "android:gravity" >center</item>

    </style>

    <!--    For Number Button 0 - 9-->
    <style name="NumberButton">

        <item name= "android:layout_width" >0dp</item>
        <item name= "android:layout_height" >match_parent</item>
        <item name = "android:layout_margin">@dimen/_1sdp</item>
        <item name= "android:layout_weight" >1</item>
        <item name = "android:background"> @color/numberButton </item>
        <item name="android:textColor">@color/white</item>
        <item name= "android:textSize" >@dimen/_21ssp</item>
        <item name= "android:gravity" >center</item>

    </style>

    <!--    For Operator Button *, -, + -->
    <style name="OperatorButton">

        <item name= "android:layout_width" >0dp</item>
        <item name = "android:layout_margin">@dimen/_1sdp</item>
        <item name= "android:layout_height" >match_parent</item>
        <item name= "android:layout_weight" >1</item>
        <item name = "android:background"> @color/operatorButton </item>
        <item name="android:textColor">@color/white</item>
        <item name= "android:textSize" >@dimen/_21ssp</item>
        <item name= "android:gravity" >center</item>

    </style>
    <!--    For Equal Button = -->
    <style name="EqualButton">

        <item name= "android:layout_width" >0dp</item>
        <item name = "android:layout_margin">@dimen/_1sdp</item>
        <item name= "android:layout_height" >match_parent</item>
        <item name= "android:layout_weight" >1</item>
        <item name = "android:background"> @color/equalButton </item>
        <item name="android:textColor">@color/white</item>
        <item name= "android:textSize" >@dimen/_21ssp</item>
        <item name= "android:gravity" >center</item>

    </style>






</resources>